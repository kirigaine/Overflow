
@{
    ViewBag.Title = "inventory";
}
    <head>
        <title>Overflow</title>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link rel="stylesheet"
              href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
              integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
              crossorigin="anonymous" />
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
                integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
                crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
                integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
                crossorigin="anonymous"></script>
        <link href="~/Content/overflow.css" rel="stylesheet" />

        <style type="text/css">
            td {
                float: left;
            }

            .select {
                float: right;
            }
            .my-custom-scrollbar 
            {
            position: relative;
            height: 540px;
            overflow: auto;
            }

            .table-wrapper-scroll-y 
            {
            display: block;
            }
            ::-webkit-scrollbar {
            display: none;
            }

        </style>


        <script type="text/javascript">
            let count = 1;

            function start() {
                let ingredients = [];
                table = document.getElementById("inventory");
               
            }
            window.addEventListener("load", start, "false");

            function add() {
                var ingredient = document.getElementById('addedIngr').value;
                table = document.getElementById("inventory");
                table.innerHTML += "<tr>\n<th scope='row'>" + count + ".</th>\n<td>" + ingredient +
                    "</td>\n<td class='select'><input type='checkbox' id=" + ingredient + "/></td>\n</tr>\n"
                count++;
                'addedIngr'.placeholder = 'Add';
            }

        </script>

        
    </head>
    <body>
        <h1>Inventory</h1>
        <div class="table-responsive table-wrapper-scroll-y my-custom-scrollbar" style="padding-bottom: 0px; border-radius: 25px">
            <table class="table table-striped table-light" style="height: 60%; color: #212529; width: inherit">
                <thead style="width: inherit">
                    <tr>
                        <th scope="col" style="width: 5%"></th>
                        <th scope="col" style="float:left">Ingredient</th>
                        <th scope="col" style="float:right">Select All <input type="checkbox" /></th>
                    </tr>
                </thead>
                <tbody id="inventory">
                </tbody>
            </table>

        </div>
        <br>
        <div class="input-group">
            <input type="text" class="form-control" id="addedIngr" value="Add ingredient" placeholder="Add ingredient" aria-label="Add ingredient" aria-describedby="button-addon2">
            <div class="input-group-append">
                <button class="btn btn-dark" type="button" id="addBtn" onclick="add()">Add</button>
            </div>
        </div>
    </body>

