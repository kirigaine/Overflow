@model Overflow.Models.Login
@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm("Login", "Home"))
{
    <div class="modal fade" id="logInModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Log In</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <form>
                        <!--Email input-->
                        <div class="form-group">
                            <label for="email">Email</label>
                            @Html.TextBoxFor(l => l.Email, new { @class = "form-control" })
                        </div>
                        <!--Password input-->
                        <div class="form-group">
                            <label for="passwd">Password</label>
                            @Html.TextBoxFor(l => l.Pass, new { @class = "form-control", @type="password" })
                        </div>
                        <!--Submit button-->
                        <button type="submit" class="btn" style="background-color: rgb(238, 75, 18)">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
