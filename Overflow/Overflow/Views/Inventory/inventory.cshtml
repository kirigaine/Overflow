
@{
    ViewBag.Title = "inventory";
}
    <head>
        <title>Overflow</title>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link rel="stylesheet"
              href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
              integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
              crossorigin="anonymous" />
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
                integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
                crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
                integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
                crossorigin="anonymous"></script>
        <link href="~/Content/overflow.css" rel="stylesheet" />

        <style type="text/css">
            td {
                float: left;
            }
        </style>
        <script type="text/javascript">
            function start() {
                let ingredients = ["bread", "bacon", "eggs", "milk", "fennel", "chicken", "beef", "pork", "corn", "noodles", "pepper", "salt", "pork", "tomato", "tomato", "tomato", "tomato", "tomato", "tomato", "tomato", "tomato", "tomato", "tomato", "tomato", "tomato", "tomato", "tomato", "tomato", "tomato", "tomato", "tomato"];
                table = document.getElementById("inventory");
                for (let i = 0; i < ingredients.length; i++) {
                    table.innerHTML += "<tr>\n<th scope='row'>" + (i + 1) + ".</th>\n<td>" + ingredients[i] +
                        "</td>\n<td class='select' style='float:right'><input type='checkbox' id='" + (i+1) + "'/></td>\n</tr>\n"
                }
                slctAll = document.getElementById("selectAll");
            }
            window.addEventListener("load", start, "false");
        </script>
    </head>
    <body style="height: inherit; padding-top: 10px; width:60%">
        <h1 style="padding-left: 10px; color: #212529">Inventory</h1>
        <div style="background-color: white; border-radius: 5px; height: 70%">
            <div class="table-responsive" style="border-radius: 5px; height: 100%">
                <table class="table table-striped table-light" style="color: #212529; width: inherit; height: inherit">
                    <thead>
                        <tr>
                            <th scope="col" style="width: 5%"></th>
                            <th scope="col" style="float:left">Ingredient</th>
                            <th scope="col" style="float:right">Select All <input type="checkbox" id="selectAll" onclick="selectAll()"/></th>
                            <th style="float:right"><input type="button" class="btn btn-dark" value="Delete Selected" /></th>
                        </tr>
                    </thead>
                    <tbody id="inventory">
                    </tbody>
                </table>
            </div>
        </div>
        <div class="input-group">
                <input type="text" class="form-control" placeholder="Add ingredient" aria-label="Add ingredient" aria-describedby="button-addon2" id="addedIngr">
                <div class="input-group-append">
                    <button class="btn btn-dark" type="button" id="addBtn">Add</button>
                </div>
            </div>
    </body>

